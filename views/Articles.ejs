  
  <%- include('includs/Head_Admin.ejs'); %>

  <div class="position-absolute w-100" style="height: 40vh; background-color: #38B6FF">
    <div class="d-flex gap-3 mx-3" style="height: 100vh;">
      <%- include('includs/SidBar_Admin.ejs'); %>

      <div class="position-relative w-100 ">
        <%- include('includs/Navbar_Admin.ejs'); %>

        <div style="height: 6vh;"></div>
        <!-- les article -->
        <div class="bg-light w-100" style="height: 80vh;">
          <div class="bg-body shadow">
            <div class="d-flex justify-content-between pt-3 p-3 bg-light">
              <div>
                <div class="d-flex" role="search">
                  <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                </div>                  
              </div>
              <div class=" d-flex justify-content-md-end">
                  <button class="btn" style="background:#66c2ff;" data-bs-toggle="modal" data-bs-target="#staticBackdrop"  type="button"><img src="https://img.icons8.com/avantgarde/30/000000/plus.png"/>Article</button>
              </div>
            </div>
            <table class="table table-sm table-responsive text-center">
              <thead>
              <tr>
                  <th class="col-2">Title</th>
                  <th class="col-2">Image</th>
                  <th class="col-6">Discrption</th>
                  <th class="col-2"></th>
              </tr>
              </thead>
              <tbody>
                <% for(var i=0; i<getallarticles.length; i++) {%>
                  <tr>
                    <td class="col-2"><%= getallarticles[i].title %></td>
                    <td class="col-2"><%= getallarticles[i].image %></td>
                    <td class="col-6"><%= getallarticles[i].discription %></td>
                    <td class="col-2">
                        <button class="btn" data-bs-toggle="modal" data-bs-target="#edite" ><i class="bi bi-pencil-square fs-4 " style="color: rgb(9, 187, 98);;"></i></button>
                        <button class="btn"><i class="bi bi-x-octagon-fill fs-4 " style="color:red;"></i></button>                   
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>
    
  </div>
  </div>
  <!-- modal add -->
  <div class="modal fade "  id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content " >
        <div class="modal-header  " style="background: #4ba7ed;">
          <h5 class="modal-title" id="staticBackdropLabel">Ajouter Article</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body ">
            <form>
                <!-- titlt input -->
                <div class="form-outline mb-3">
                    <label ><strong>Title</strong></label>
                  <input type="text" id="titlt" class="form-control" />
                </div>
              
                <!-- image input -->
                <div class="form-outline mb-3">
                    <label class="form-label" for="image"><strong>Image</strong></label>

                  <input type="file" id="form4Example2" class="form-control" />
                </div>
              
                <!-- discription input -->
                <div class="form-outline mb-3">
                    <label class="form-label" for="discription"><strong>discription</strong></label>

                  <textarea class="form-control" id="discription" rows="4"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn fw-bold" style="background: #4ba7ed;">Ajouter </button>
                  </div>
              </form>
        </div>
        
      </div>
    </div>
  </div>
  <!-- modal update -->
  <div class="modal fade "  id="edite" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content " >
        <div class="modal-header  " style="background: #4ba7ed;">
          <h5 class="modal-title" id="edite">Modifier Article</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body ">
            <form>
                <!-- Name input -->
                <div class="form-outline mb-3">
                    <label class="form-label" for="form4Example1"><strong>Title</strong></label>
                  <input type="text" id="form4Example1" class="form-control" />
                </div>
              
                <!-- Email input -->
                <div class="form-outline mb-3">
                    <label class="form-label" for="form4Example2"><strong>Image</strong></label>

                  <input type="email" id="form4Example2" class="form-control" />
                </div>
              
                <!-- Message input -->
                <div class="form-outline mb-3">
                    <label class="form-label" for="form4Example3"><strong>discription</strong></label>

                  <textarea class="form-control" id="form4Example3" rows="4"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn fw-bold" style="background: #4ba7ed;">Modifier </button>
                  </div>
              </form>
        </div>
        
      </div>
    </div>
  </div>

  <%- include('includs/Footer_Admin.ejs'); %>