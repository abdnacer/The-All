      <div class="col-2 position-relative" id="assidBar">
        <aside class="d-flex flex-column align-items-center shadow" id="assidbar"
          style="height: 96vh; margin-top: 2vh; background-color: #fff; border-radius: 16px;">
          <!-- Logo -->
          <div class="d-flex justify-content-center align-items-center ">
            <img src="assets/the_all.png" style="width: 60%; padding-top: 20px;" alt="logo">
          </div>
          <hr class="w-75 m-0 my-2 p-0 text-white">
          <!-- Info Profile -->
          <div class="d-flex flex-column text-center justify-content-center align-items-center py-2 gap-1">
            <!-- <a href="Dashboard"><img class="rounded-circle" src="assets/the_all.png" style="width: 60%;" alt="avatar"></a> -->
            <span class="fs-4 pt-3 fw-bold test-center" style="color:#38B6FF;">Abdenacer Sandali</span>
            <div class="d-flex flex-column justify-content-center align-items-center py-2 gap-1">
              <!-- <span class="fs-5 pt-2 " style="color: #222;">Admin</span> -->
              <!-- <hr class="w-100 m-0 p-0"> -->
            </div>
            <div>


              <ul
                class="navbar-nav d-flex flex-column justify-content-center align-items-center my-2 gap-md-4 gap-sm-3 gap-1">
                <li class="nav-item text-center">
                  <a class="nav-link" href="Dashboard">
                    <span class="fs-5 text-dark">Dashboard</span>
                  </a>
                </li>
                <li class="nav-item text-center ">
                  <a class="nav-link" href="Profil">
